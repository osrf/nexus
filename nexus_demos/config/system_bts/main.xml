<root main_tree_to_execute="main">
  <BehaviorTree ID="main">
    <ReactiveSequence>
      <IsPauseTriggered paused="{paused}"/>
      <Fallback>
        <PausableSequence pause="{paused}">
          <ForEachTask task="{task}" workcell="{workcell}">
            <ExecuteTask task="{task}" workcell="{workcell}"/>
          </ForEachTask>
          <CreateTransporterTask workcell_task="{task}" destination="unloading" result="{transport_task}"/>
          <BidTransporter name="bid_transporter" transport_task="{transport_task}" result="{transporter}"/>
          <TransporterRequest name="transporter_request" transport_task="{transport_task}" transporter="{transporter}"/>
        </PausableSequence>
        <PausableSequence pause="{paused}">
          <CreateTransporterTask workcell_task="{task}" destination="unloading" result="{transport_task}"/>
          <BidTransporter name="bid_transporter" transport_task="{transport_task}" result="{transporter}"/>
          <TransporterRequest name="transporter_request" transport_task="{transport_task}" transporter="{transporter}"/>
          <AlwaysFailure/>
        </PausableSequence>
      </Fallback>
    </ReactiveSequence>
  </BehaviorTree>
</root>

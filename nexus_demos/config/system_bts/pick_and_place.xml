<root main_tree_to_execute="pick_and_place">
  <BehaviorTree ID="pick_and_place">
    <ReactiveSequence>
      <IsPauseTriggered paused="{paused}"/>
      <Parallel success_threshold="-1">
        <Sequence>
          <!-- Create transport task, return success but a nullopt if it's not necessary -->
          <CreateTransporterTask workcell_task="{task}" destination="{workcell}" result="{transport_task}"/>
          <BidTransporter name="bid_transporterasdasd" transport_task="{transport_task}" result="{transporter}"/>
          <TransporterRequest name="transporter_request" transport_task="{transport_task}" transporter="{transporter}"/>
          <SendSignal task="{task}" signal="transporter_done"/>
        </Sequence>
        <WorkcellRequest name="workcell_request" workcell="{workcell}" task="{task}"/>
      </Parallel>
    </ReactiveSequence>
  </BehaviorTree>
</root>
